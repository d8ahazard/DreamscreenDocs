    <ImageButton android:id="@+id/hdmiButton" android:background="@drawable/widget_source_button_background" android:layout_width="60dp" android:layout_height="60dp" android:layout_marginLeft="8dp" android:scaleType="centerInside"/>
</LinearLayout>
